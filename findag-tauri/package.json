{
  "name": "findag-desktop",
  "version": "1.0.0",
  "description": "FinDAG Desktop - Institutional-grade blockchain desktop application",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:preview": "tauri preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:production": "bash scripts/build-production.sh",
    "build:production:win": "powershell -ExecutionPolicy Bypass -File scripts/build-production.ps1",
    "deploy": "npm run build:production && npm run upload-artifacts",
    "upload-artifacts": "node scripts/upload-artifacts.js",
    "release": "npm run test:ci && npm run lint && npm run build:production"
  },
  "dependencies": {
